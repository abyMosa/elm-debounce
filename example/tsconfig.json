{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "es6",
    "lib": [
      "es5",
      "es6",
      "dom",
      "dom.iterable",
      "ES2023"
    ],
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "strict": true,
    "target": "es2015"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "elm-stuff"
  ]
}
